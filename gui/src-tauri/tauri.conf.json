{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PolyGen",
  "version": "0.1.0",
  "identifier": "com.polygen.app",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PolyGen",
        "width": 1024,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
        "icons/32x32.png",
        "icons/64x64.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/256x256.png",
        "icons/icon.icns",
        "icons/icon.ico",
        "icons/icon.png"
      ],
    "resources": [
      "../../target/release/polygen*",
      "../../templates",
      "../../static"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
