{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PolyGen",
  "version": "0.1.0",
  "identifier": "com.polygen.app",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "PolyGen",
        "width": 1024,
        "height": 700,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "resources": ["../../target/release/polygen*"]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
